
class Solution {
public:
    vector<int> productExceptSelf(vector<int>& nums) {
        int size = nums.size();
        vector<int> answer(size, 1); 

        int product = 1;
        for (int i = 0; i < size; i++) {
            answer[i] *= product;
            product *= nums[i];
        }

        product = 1;
        for (int i = size - 1; i >= 0; i--) {
            answer[i] *= product;
            product *= nums[i];
        }
        return answer;
    }
};
